/* pages/index/index_debug.wxss - 调试版本 */

.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-color: #F5F7FA;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.15;
  z-index: 1;
}

.main-content {
  position: relative;
  z-index: 2;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 标题栏 */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-top: 100rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1A1A1A;
  text-shadow: 0 2rpx 4rpx rgba(64, 255, 255, 0.4);
}

.control-buttons {
  display: flex;
  gap: 24rpx;
}

.control-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(74, 144, 226, 0.4);
}

.settings-btn {
  font-size: 24rpx;
}

/* 调试信息区域 */
.debug-section {
  background-color: #FFF3E0;
  border: 2rpx solid #FF9800;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.debug-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #E65100;
  margin-bottom: 16rpx;
  text-align: center;
}

.debug-content {
  margin-bottom: 16rpx;
}

.debug-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #FFCC80;
}

.debug-item:last-child {
  border-bottom: none;
}

.debug-label {
  font-size: 28rpx;
  color: #BF360C;
  font-weight: 500;
}

.debug-value {
  font-size: 28rpx;
  color: #E65100;
  font-weight: bold;
  max-width: 300rpx;
  text-align: right;
  word-break: break-all;
}

.debug-buttons {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.debug-btn {
  background-color: #FF9800;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.debug-btn:active {
  background-color: #F57C00;
}

/* 状态信息 */
.status-section {
  margin-bottom: 32rpx;
}

.status-info, .error-message {
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.status-info {
  background-color: white;
  color: #2C3E50;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.error-message {
  background-color: #FF5722;
  color: white;
}

/* 游戏棋盘 */
.game-board-section {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.sudoku-board {
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  overflow: hidden;
}

.board-grid {
  border: 6rpx solid #1A1A1A;
  background-color: #F8F9FA;
}

.board-row {
  display: flex;
}

.board-row:nth-child(3n) {
  border-bottom: 6rpx solid #1A1A1A;
}

.board-cell {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #E0E0E0;
  position: relative;
  background-color: white;
  transition: all 0.2s ease;
}

.board-cell:nth-child(3n) {
  border-right: 6rpx solid #1A1A1A;
}

.board-cell.selected {
  background-color: #E3F2FD;
  border-color: #2196F3;
}

.board-cell.conflict {
  background-color: #FFEBEE;
  border-color: #F44336;
}

.board-cell.initial {
  background-color: #F5F5F5;
  font-weight: bold;
}

.cell-number {
  font-size: 36rpx;
  color: #1A1A1A;
  font-weight: 500;
}

.loading-board {
  width: 600rpx;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #E0E0E0;
  border-top: 8rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #2C3E50;
  margin-bottom: 16rpx;
}

.loading-debug {
  font-size: 24rpx;
  color: #FF9800;
  font-weight: bold;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 数字输入区域 */
.input-section {
  margin-bottom: 32rpx;
}

.number-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.number-btn {
  height: 96rpx;
  background-color: white;
  border: 2rpx solid #E0E0E0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #2C3E50;
  transition: all 0.2s ease;
}

.number-btn:active {
  background-color: #F5F5F5;
  border-color: #4A90E2;
  transform: scale(0.95);
}

/* 功能按钮 */
.function-buttons {
  display: flex;
  gap: 16rpx;
}

.function-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.2s ease;
}

.clear-btn {
  background-color: #FF9800;
  color: white;
}

.clear-btn:active {
  background-color: #F57C00;
}

.new-game-btn {
  background-color: #4CAF50;
  color: white;
}

.new-game-btn:active {
  background-color: #388E3C;
}

/* 冲突提示 */
.conflict-section {
  background-color: #FFEBEE;
  border: 2rpx solid #F44336;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.conflict-text {
  font-size: 28rpx;
  color: #C62828;
  font-weight: 500;
}

/* 游戏信息 */
.game-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.timer, .hints {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.timer-label, .hints-label {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 500;
}

.timer-value, .hints-value {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: bold;
}

.hint-btn {
  background-color: #9C27B0;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.hint-btn:active {
  background-color: #7B1FA2;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background-color: white;
  border-radius: 24rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 对话框 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-content {
  background-color: white;
  border-radius: 24rpx;
  padding: 48rpx;
  max-width: 600rpx;
  width: 90%;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A1A1A;
  text-align: center;
  margin-bottom: 24rpx;
}

.dialog-message {
  font-size: 28rpx;
  color: #2C3E50;
  text-align: center;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.dialog-buttons {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.dialog-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.2s ease;
}

.dialog-btn.primary {
  background-color: #4A90E2;
  color: white;
}

.dialog-btn.primary:active {
  background-color: #357ABD;
}

.dialog-btn.secondary {
  background-color: #E0E0E0;
  color: #2C3E50;
}

.dialog-btn.secondary:active {
  background-color: #BDBDBD;
}



