/* pages/settings/settings.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F7FA;
  padding: 32rpx;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
  padding-top: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1A1A1A;
}

.settings-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.settings-section {
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #E0E0E0;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  flex: 1;
}

.setting-label text {
  font-size: 28rpx;
  color: #2C3E50;
}

.setting-control {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.picker {
  background-color: #F8F9FA;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #4A90E2;
  min-width: 120rpx;
  text-align: center;
}

.slider-value {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
}

.danger-btn {
  background-color: #FF5722;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.version-text, .developer-text {
  font-size: 28rpx;
  color: #666666;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

/* 滑块样式 */
slider {
  flex: 1;
  margin: 0 16rpx;
}

/* 对话框样式 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-content {
  background-color: white;
  padding: 48rpx;
  border-radius: 24rpx;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A1A1A;
  text-align: center;
  margin-bottom: 24rpx;
}

.dialog-message {
  font-size: 28rpx;
  color: #2C3E50;
  text-align: center;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.dialog-buttons {
  display: flex;
  gap: 16rpx;
}

.dialog-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.dialog-btn.danger {
  background-color: #FF5722;
  color: white;
}

.dialog-btn.secondary {
  background-color: #E0E0E0;
  color: #2C3E50;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
  
  .settings-section {
    padding: 24rpx;
  }
  
  .setting-item {
    padding: 20rpx 0;
  }
  
  .setting-label text {
    font-size: 26rpx;
  }
  
  .picker {
    font-size: 26rpx;
    padding: 14rpx 20rpx;
  }
}
