/* pages/statistics/statistics.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F7FA;
  padding: 32rpx;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
  padding-top: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1A1A1A;
}

.stats-section {
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #E0E0E0;
}

/* 总体统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx;
  background-color: #F8F9FA;
  border-radius: 16rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 最佳记录 */
.best-record {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.best-time, .best-date {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.time-label, .date-label {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 500;
}

.time-value {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

.date-value {
  font-size: 28rpx;
  color: #666666;
}

/* 难度统计 */
.difficulty-stats {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.difficulty-item {
  padding: 24rpx;
  background-color: #F8F9FA;
  border-radius: 16rpx;
}

.difficulty-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.difficulty-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C3E50;
}

.difficulty-count {
  font-size: 24rpx;
  color: #666666;
}

.difficulty-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background-color: #E0E0E0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4A90E2;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: bold;
  min-width: 60rpx;
}

.difficulty-best {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.best-label {
  font-size: 24rpx;
  color: #666666;
}

.best-value {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 游戏历史 */
.recent-games {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.game-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #F8F9FA;
  border-radius: 16rpx;
}

.game-info {
  flex: 1;
}

.game-date {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.game-result {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.result-status {
  font-size: 24rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.result-status.completed {
  background-color: #E8F5E8;
  color: #4CAF50;
}

.result-status.incomplete {
  background-color: #FFF3E0;
  color: #FF9800;
}

.result-time {
  font-size: 24rpx;
  color: #4A90E2;
}

.game-difficulty {
  font-size: 24rpx;
  color: #666666;
  padding: 8rpx 16rpx;
  background-color: #E0E0E0;
  border-radius: 12rpx;
}

/* 成就系统 */
.achievements {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.achievement-item.unlocked {
  background-color: #E8F5E8;
  border: 2rpx solid #4CAF50;
}

.achievement-item.locked {
  background-color: #F5F5F5;
  border: 2rpx solid #E0E0E0;
  opacity: 0.7;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #4A90E2;
  color: white;
  font-size: 32rpx;
  flex-shrink: 0;
}

.achievement-item.locked .achievement-icon {
  background-color: #BDBDBD;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.achievement-progress {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.progress-text {
  font-size: 22rpx;
  color: #4A90E2;
  font-weight: bold;
}

.achievement-status {
  text-align: center;
  min-width: 80rpx;
}

.status-text {
  font-size: 22rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.achievement-item.unlocked .status-text {
  background-color: #4CAF50;
  color: white;
}

.achievement-item.locked .status-text {
  background-color: #BDBDBD;
  color: white;
}

/* 重置按钮 */
.reset-section {
  text-align: center;
  margin-top: 32rpx;
}

.reset-btn {
  background-color: #FF5722;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 对话框样式 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-content {
  background-color: white;
  padding: 48rpx;
  border-radius: 24rpx;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A1A1A;
  text-align: center;
  margin-bottom: 24rpx;
}

.dialog-message {
  font-size: 28rpx;
  color: #2C3E50;
  text-align: center;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.dialog-buttons {
  display: flex;
  gap: 16rpx;
}

.dialog-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.dialog-btn.danger {
  background-color: #FF5722;
  color: white;
}

.dialog-btn.secondary {
  background-color: #E0E0E0;
  color: #2C3E50;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
  
  .stats-section {
    padding: 24rpx;
  }
  
  .stats-grid {
    gap: 16rpx;
  }
  
  .stat-item {
    padding: 20rpx;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .achievement-item {
    padding: 20rpx;
  }
  
  .achievement-icon {
    width: 70rpx;
    height: 70rpx;
    font-size: 28rpx;
  }
}
